@model IEnumerable<MvcInterface.Models.Awards>

@if (Model.Count()==0)
{
    
    @:This user has no awards yet
    
}
else
{
    <table class="table">
     
        <tr>
             @foreach (var item in Model) {
            <th> @Html.DisplayFor(modelItem => item.Title)</th>  
             }       
        </tr>
        
        <tr>
        @foreach (var item in Model) {
        
            <td>
            <div class="row-fluid show-grid">
                <div class="span1" >
                     <img src="@Url.Action("GetAwardImage", "Awards", new { path = item.ImageAddr })" class="img-thumbnail" />
                </div>
                <div class="span1" ></div>
                <div class="span2" ></div>
                <div class="span4" ></div>
                <div class="span4" ></div>
            </div>
            </td>
        }
        </tr>
    
    </table>
}

