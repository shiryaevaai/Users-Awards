@model MvcInterface.Models.Users

@{
    ViewBag.Title = "AddAwardToUser";
    var list = Model._awardNotHasList;
}

<h2>AddAwardToUser</h2>


@foreach (var item in list) {

    @*    @Html.DisplayFor(modelItem => item.Title) |
        @Html.ActionLink("Add", "AddAwardToUser", new { AwardID=item.ID }) *@

        
        using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <fieldset>       
                <legend></legend>
                
            <div class="row-fluid show-grid">

                <div class="span1" >
                     <img src="@Url.Action("GetAwardImage", "Awards", new { path = item.ImageAddr })" class="img-thumbnail" />
                </div>
                <div class="span1" ></div>
                <div class="span2" ></div>
                <div class="span4" ></div>
                <div class="span4" ></div>

            </div>
         

                <div class="editor-field">
                 @Html.DisplayFor(modelItem => item.Title)
                </div>

                @Html.Hidden("UserID", Model.ID)
                @Html.Hidden("AwardID", item.ID)
                @Html.AntiForgeryToken()
                <p>
                    <input type="submit" value="Add" />
                </p>
            </fieldset>
        }          
}

<div>
    @Html.ActionLink("Back to Details", "Details", new { id=Model.ID })
</div>